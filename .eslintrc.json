{
	"parser":"babel-eslint",
    "env": {
        "browser": true,
        "node": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
        	"experimentalObjectRestSpread": true,
            "jsx": true
        }      
    },
    "plugins": ["react"],
    "globals": {
        "Promise":true
    },
    "rules": {
        "semi": 2,
        "no-console":0,
        "no-mixed-spaces-and-tabs":0
    }
}